#!/bin/sh

[ -f /bin/openwebrx.sh ] || exit 0

start() {
	printf "Starting OpenwebRx: "
	screen -Dm /bin/openwebrx.sh $0 &
	echo "<BR> - Done - Available here:  <a href=\"http://pluto.local:8073\">http://pluto.local:8073</a>  "
}


stop() {
	printf "Stopping OpenwebRx: "
	killall python
	killall csdr
	killall nc
	killall nmux
	killall screen
	echo "done"
}

restart() {
	stop
	start
}

# See how we were called.
case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|reload|restart}"
	exit 1
esac

exit $?
